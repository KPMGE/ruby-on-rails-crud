<p style="color: green"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </div>
  <div class="card-body">
    <h5 class="card-title">
      My twitter: <%= @friend.twitter %>
    </h5>

    <h5 class="card-title">
      My phone: <%= @friend.phone %>
    </h5>

    <%= link_to "Edit", edit_friend_path(@friend), class: 'btn btn-outline-warning' %>
    <%= button_to "Delete", @friend, method: :delete, class: 'btn btn-outline-danger d-inline' %>
    <%= link_to "Back", friends_path, class: 'btn btn-outline-primary' %>
  </div>
</div>


